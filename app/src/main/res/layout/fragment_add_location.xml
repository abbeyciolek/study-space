<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp"
                android:textColor="@color/primary_text_default_material_light"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/location_name"
                android:hint="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/building_name"
                android:hint="Building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"/>


            <TextView
                android:id="@+id/address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="25sp"
                android:padding="10dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/address"
                android:hint="Street Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/city"
                android:hint="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/state"
                android:hint="State"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"
                />

            <EditText
                android:id="@+id/zipcode"
                android:hint="ZIP Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/hours_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hours"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="25sp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/sundayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mondayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tuesdayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/wednesdayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/thursdayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thursday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fridayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saturdayOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textColor="@color/theme_primary"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".5"/>


            </LinearLayout>

            <Button
                android:id="@+id/upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Photo"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="20sp"
                style="?android:attr/borderlessButtonStyle"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar"/>

    </ViewSwitcher>

</ScrollView>
